---
import { Icon } from "astro-icon/components";
import { t } from "@util/translate";

const today = new Date();
---

<footer class="surface-footer relative w-full">
  <div
    class="container-xl mx-auto grid grid-cols-1 gap-8 pb-5 pt-10 lg:grid-cols-3"
  >
    <!-- About Section -->
    <div class="flex flex-col items-center text-center lg:items-start lg:text-left">
      <a rel="noopener noreferrer" href="#" aria-label={t("back_to_home")}>
        <Icon name="logo" class="mr-2 h-20 w-20" />
      </a>
      <div class="balance pr-4 pt-4 text-sm text-white">
        Promonium Logistics Limited provides reliable and efficient transportation solutions. 
        Trusted for timely deliveries, we ensure your cargo reaches its destination safely.
      </div>
      <div class="mt-auto flex gap-2 pt-4 text-xs opacity-70">
        <span>&copy;{today.getFullYear()}</span>
        <span>Promonium</span>
      </div>
    </div>

    <!-- Contact Info Section -->
    <div class="space-y-3 text-left lg:text-left md:text-center sm:text-center">
      <h3 class="font-bold text-xl uppercase text-center lg:text-left">{t("Contact Info")}</h3>
      <div class="flex flex-col space-y-4">
        <div class="flex items-start justify-center lg:justify-start">
          <Icon name="map-marker" class="mr-2 h-6 w-6 text-white shrink-0" />
          <span>9 Abosede Ademakinwa Street, Ogudu, Lagos, Nigeria</span>
        </div>
        <div class="flex items-center justify-center lg:justify-start">
          <Icon name="phone" class="mr-2 h-6 w-6 text-white shrink-0" />
          <span>(+234) 814 857 1524, <br>(+234) 703 631 9444</span>
        </div>
        <div class="flex items-center justify-center lg:justify-start">
          <Icon name="email" class="mr-2 h-6 w-6 text-white shrink-0" />
          <span>info@promoniumng.com</span>
        </div>
      </div>
    </div>

    <!-- Google Maps Section -->
    <div class="flex flex-col">
      <div class="h-48 w-full lg:h-48 md:h-36 sm:h-32 rounded-lg overflow-hidden">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3963.8528640793837!2d3.3897462!3d6.5534722!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x103b8d73a658782b%3A0x7a1de11d89948669!2s9%20Abosede%20Ademakinwa%20St%2C%20Ogudu%20102216%2C%20Lagos!5e0!3m2!1sen!2sng!4v1703165433736!5m2!1sen!2sng"
          width="100%"
          height="120%"
          style="border:0;"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="rounded-lg"
          title="Promonium Logistics Location"
        ></iframe>
      </div>
      <div class="mt-auto pt-14 text-xs opacity-70 text-center lg:text-left">
        Website Design by <a href="https://tekfo.io" target="_blank" rel="noopener noreferrer" class="hover:underline">Tekfolio</a>
      </div>
    </div>
  </div>

  <!-- Attribution Section -->
  <div class="w-full bg-black/20">
    <div class="attribution container-xl text-center lg:text-left">
      <a
        href="https://unfolding.io"
        target="_blank"
        rel="noopener noreferrer"
        class="group my-4 inline-flex flex-col items-center lg:items-start gap-1.5 rounded-md p-2 text-center lg:text-left text-xs tracking-widest shadow-inset-s"
      >
        <sup class="pointer-events-none pt-2 opacity-60">powered by</sup>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          xml:space="preserve"
          viewBox="0 0 292.39 67.02"
          class="pointer-events-none h-4 opacity-60 transition-opacity duration-500 group-hover:opacity-100"
        >
          <path
            d="M293.58 181.46c4.05-.89 8.08-1.85 12.19-2.88v-36.41h-16.05v1.18h3.87v38.11zm59.22-3.38c3.96 1.95 8.03 3.66 12.19 5.13v-23.09h-16.05v1.18h3.86v16.78zm20.9 7.94c4.01 1.16 8.1 2.16 12.19 3v-16.97c-.07-2.33.48-4.64 1.61-6.68 1.07-1.83 2.3-2.75 3.7-2.75.81-.06 1.58.4 1.9 1.15.46 1.65.64 3.37.52 5.08v21.29h-1.69c3.05.5 6.07.9 9 1.18h8.54v-1.18h-3.67v-19.72c0-7.29-3.39-10.94-10.16-10.94-2.93 0-5.11.61-6.55 1.83-1.49 1.29-2.6 2.97-3.21 4.85v-6.03H370.1v1.18h3.6v24.71zm-14.87-30.42c2.32 0 4.02-.57 5.11-1.7a6.313 6.313 0 0 0 1.64-4.55c.1-1.64-.52-3.25-1.7-4.39a7.163 7.163 0 0 0-4.98-1.54c-1.79-.14-3.57.47-4.88 1.7a6.06 6.06 0 0 0-1.61 4.32c-.05 1.59.47 3.15 1.47 4.39.99 1.18 2.63 1.77 4.95 1.77z"
            transform="translate(-152.13 -140.668)"
            fill="currentColor"></path>
        </svg>
      </a>
    </div>
  </div>
  
  <slot />
</footer>

<style>
.surface-footer {
  @apply bg-black text-white;
}

.attribution {
  width: 100%;
  padding: 0.5rem 0;
}
</style>